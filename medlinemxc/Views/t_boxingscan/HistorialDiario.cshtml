@model medlinemxc.Models.t_boxingscan_d

@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-2">Historial Diario por linea</h2>

                <table id="dtBasicExample" class="table table-striped table-bordered mt-3" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                Fecha
                            </th>
                            <th>
                                Linea
                            </th>
                            <th>
                                Cajas
                            </th>
                            <th>
                                Kits
                            </th>
                            <th>
                                WOs
                            </th>
                            <th>
                                T. Muerto
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.listalineas)
            {
                

                            <tr class="my-auto">

                                <td>
                                    @item.fecha
                                </td>
                                <td>
                                    @item.linea
                                </td>
                                <td>
                                    @item.cajas
                                </td>
                                <td>
                                    @item.kits
                                </td>
                                <td>
                                    @item.wos
                                </td>

                                <td>
                                    @item.tmuerto
                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

<a class="mt-2" href="@Url.Action("ProdDiariaCR", "t_boxingscan", null)">
    Regresar
</a>



@section scripts{
<script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable({
                "order": [[0, "desc"], [1, "asc"]]
            });
            $('.dataTables_length').addClass('bs-select');
        });
</script>
    }
   